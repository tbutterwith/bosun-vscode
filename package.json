{
    "name": "bosun",
    "displayName": "Bosun",
    "description": "Language support for bosun expressions",
    "version": "1.1.4",
    "publisher": "tbutterwith",
    "icon": "icon.png",
    "repository": {
        "url": "https://github.com/tbutterwith/bosun-vscode"
    },
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "*",
        "onLanguage:bosun"
    ],
    "main": "./out/bosun",
    "contributes": {
        "configuration": {
            "title": "Bosun Plugin Configuration",
            "properties": {
                "bosun": {
                    "type": "object",
                    "properties": {
                        "url": {
                            "title": "Bosun Url",
                            "Description": "Bosun instance url for validating configuration files",
                            "type": "string",
                            "pattern": "^https?://.+"
                        },
                        "openTsdb": {
                            "properties": {
                                "url": {
                                    "title": "OpenTSDB Url",
                                    "description": "OpenTSDB Url for requesting metrics paths",
                                    "type": "string",
                                    "pattern": "^https?://.+"
                                },
                                "port": {
                                    "title": "OpenTSDB Port",
                                    "description": "OpenTSDB port number",
                                    "type": "integer",
                                    "default": 4242
                                },
                                "maxEntries": {
                                    "title": "Max Entries",
                                    "description": "The maximum number of OpenTSDB metrics paths to request from the API",
                                    "type": "integer",
                                    "default": 500
                                }
                            }
                        }
                    }
                }
            }
        },
        "commands": [
            {
                "command": "bosun.clearOpentsdbCache",
                "title": "Clear OpenTSDB Cache",
                "category": "Bosun"
            },
            {
                "command": "bosun.validateBosun",
                "title": "Validate Bosun Configuration",
                "category": "Bosun"
            }
        ],
        "languages": [
            {
                "id": "bosun",
                "aliases": [
                    "Bosun",
                    "bosun"
                ],
                "extensions": [
                    ".conf"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bosun",
                "scopeName": "source.bosun",
                "path": "./syntaxes/bosun.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "request": "^2.88.0",
        "request-promise-native": "^1.0.8"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.5",
        "@types/nock": "^9.3.1",
        "@types/node": "^10.12.18",
        "@types/sinon": "^7.0.4",
        "nock": "^10.0.6",
        "sinon": "^7.2.3",
        "tslint": "^5.12.1",
        "typescript": "^3.2.4",
        "vscode": "^1.1.28"
    }
}
